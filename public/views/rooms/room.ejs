
<div class="grid" id="{{room.id}}" ng-show='viewPage == room.id' style="width:120%">
    <div class="row" style="height:100%">
        <div class="span11">
            <div class="panel" >
                <div class="panel-header  bg-lightBlue fg-white">
                    {{pinViews[pinView].name}}
                    <button ng-click="pinView = (pinView+1)%3" class="icon-arrow-right"></button>
                </div>
                <div class="panel-content" style="height:100px; overflow:scroll;">
                    <table ng-repeat="item in room.pinnedPosts.slice().reverse()">
                        <tr ng-show="item.type == pinViews[pinView].type">
                            <td><b>{{item.name}} </b> : <pin post="item"></pin></td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="panel" ng-show = 'navView != "chatLog"'>
                <div class="panel-header  bg-lightBlue fg-white">
                    {{room.name}}
                </div>
                <div class="panel-content">
                    <div id="general" class="frame" style="overflow:scroll; height:250px">
                        <ul>
                            <li class="list-unstyled" ng-repeat="message in room.posts" ng-cloak autoscroll ng-class="{dark: $index % 2 === 0}"><strong>{{ message.name }}</strong>: {{ message.message }}</li>
                        </ul>
                    </div>
                    <br>
                    <form class="input-control">
                        <input class="input-control text size8" ng-model="message" name="message" id="message" on-focus="focus(true)" on-blur="focus(false)" type="text" value="" placeholder="Enter a Message..."></input>
                        <div class="size2 input-control select">
                            <select ng-model="room.writeMode" ng-options="mode for mode in modes"></select>
                        </div>
                        <input type="text" ng-model="urllink" ng-show="room.writeMode == 'Link'" placeholder="Place URL Link here" class="size5 input-control text"></input>
                        <button ng-click="send(room.id, room.writeMode)">Submit</button>
                    </form>
                    <a href = "" ng-click="navView='chatLog';getChatLog(room.name)">Chat Log</a>
                </div>
            </div>
            <div class="panel" ng-show = 'navView == "chatLog"'>
                 <%- include ../chatLog.ejs %>
            </div>
        </div>
        <div class="span3"  >
            <div class="panel">
                <div class="panel-header  bg-lightBlue fg-white">People Online</div>

                <div class="listview-outlook small" style="height:500px;">
                    <div ng-repeat="person in room.people">
                        <a href="#" class="list" ng-click="invitePerson(person)">
                            <div class="list-content">
                                <img src="http://metroui.org.ua/images/word2013icon.png" class="icon" />
                                <div class="data">{{person.name}}</div>
                            </div>
                        </a>
                    </div>
                    <a href="#" class="list">
                        <div class="list-content">
                            <div ng-click="leaveRoom(room)" class="data">Leave Room</div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
