<div ng-controller = "chatCtrl" class="row">
    <nav class="sidebar light span3">
        <ul>
            <li class="title">Your Rooms</li>
        </ul>
        <ul >
            <li  ng-repeat="room in currentRooms">
                <a ng-click="switchRoom(room);getChatLog(room.name);"> {{room.code}}
                 <div class='badge bg-red' ng-show="room.messageQueue > 0">{{room.messageQueue}}</div></a>
                
            </li>
        </ul>
        <ul>
            <li ng-click='viewPage = "addroom"'>
                <a>Manage Rooms</a>
            </li>
        </ul>
    </nav>
    <div class="span12">
        <div style="padding-left: 20px;">
            <div id="addroom" ng-show="viewPage == 'addroom'">
                <div ng-show="grid">
                    <%- include rooms/gridRoomLayout %>
                </div>
                <div ng-show="!grid">
                    <div class="grid">
                        <div class="row">
                            <div id="createroom" class="grid">
                                <form class="form-inline row" role="form" ng-hide="user.owns && user.inroom">

                                    <div class="form-group span10">
                                        <input type="text" placeholder="Enter room name" class="form-control" ng-model="roomname" name="roomname" id="roomname">
                                    </div>

                                    <div class="button-set span2">
                                        <button ng-class="{'active' : !grid}" ng-click="grid=false">
                                            <i class="icon-list"></i>
                                        </button>
                                        <button ng-class="{'active' : grid}" ng-click="grid=true">
                                            <i class="icon-grid"></i>
                                        </button>
                                    </div>

                                </form>
                            </div>

                            <!-- <div class="span8" style="height:500px; overflow:visible"> -->
                        <div>
                          <div class="table-responsive">
                          <table class="table table-hover">
                            <tbody>
                            <tr ng-repeat="room in rooms | filter : {name : roomname} | filter: addedInRoom" ng-cloak>
                                <td class="table-list" ng-click='addRoom(room)'>
                                        {{ room.name }}
                              </td>
                            </tbody>
                          </table>
                          </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div ng-repeat="room in currentRooms">
                <%- include rooms/room %>
            </div>
        </div>
    </div>
</div>