<div class="row">
    <nav class="sidebar light span3">
        <ul>
            <li class="title">Your Rooms</li>
        </ul>
        <ul >
            <li  ng-repeat="room in currentRooms">
                <a ng-click="switchRoom(room)"> {{room.name.slice(0,12)}}
                 <div class='badge bg-red' ng-show="room.messageQueue > 0">{{room.messageQueue}}</div></a>
                
            </li>
        </ul>
        <ul>
            <li ng-click='viewPage = "addroom"'>
                <a>Manage Rooms</a>
            </li>
        </ul>
    </nav>
    <div class="span12">
        <div style="padding-left: 20px;">
            <div id="addroom" ng-show="viewPage == 'addroom'">
                <div ng-show="grid">
                    <%- include rooms/gridRoomLayout %>
                </div>
                <div ng-show="!grid">
                    <%- include rooms/listRoomLayout %>
                </div>
            </div>

            <div ng-repeat="room in currentRooms">
                <%- include rooms/room %>
            </div>
        </div>
    </div>
</div>